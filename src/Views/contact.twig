{% extends "layout/layout.twig" %}

{% block title %}

    Contact

{% endblock %}

{% block header %}

    <h1 class="contact-m text-center">Me contacter</h1>

{% endblock %}

{% block content %}

    <section class="container contact-m-c p-4 border border-secondary rounded-lg shadow-lg text-center">

        <form class="form-group" action="{{ url('contact!default') }}" method="POST" enctype="multipart/form-data">

            <div class="form-group">

                <label for="pseudo" class="col-sm-8 col-form-label">Votre pseudo ou votre nom</label>
                <input type="text" class="form-control" id="pseudo" name="pseudo" placeholder="john-doe01" required>

            </div>

            <div class="form-group">
 
                <label for="email" class="col-sm-8 col-form-label">Votre mail</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="john@doe.gmail" required>

            </div>

            <div class="form-group">

                <label for="subject" class="col-sm-8 col-form-label">Objet de votre message</label>
                <input type="text" id="subject" class="form-control" name="subject" placeholder="Votre sujet" maxlength="50" required>

            </div>

            <div class="form-group">

                <label for="message" class="col-sm-8 col-form-label">Votre message</label>
                <textarea id="message" class="form-control" name="message" placeholder="Votre message" rows="6" cols="120"></textarea>

            </div>

            <button type="submit" class="mt-3 btn btn-primary">Envoyer</button>

        </form>

    </section>

{% endblock %}