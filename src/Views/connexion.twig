{% extends "layout/layout.twig" %}

{% block title %}

    Connexion au Blog de Jean Forteroche

{% endblock %}

{% block header %}

    <h1 class="mg-y text-center">Se connecter</h1>

{% endblock %}

{% block content %}

    <form class="container" action="{{ url('user!default') }}" method="POST" enctype="multipart/form-data">

        <div class="form-group col-6 offset-3">

            <label for="email" class="col-sm-4 col-form-label">email</label>
            <input type="email" class="form-control" id="email" placeholder="john@doe.gmail" required>

        </div>

        <div class="form-group col-6 offset-3">

            <label for="pass" class="col-sm-4 col-form-label">Mot de passe</label>
            <input type="password" class="form-control" id="pass" autocomplete="off" required>

        </div>

        <button type="submit" class="btn btn-primary offset-8">Connexion</button>

    </form>

    <h2 class="mg-y text-center">Pas de compte ?</h2>
    <p class="text-center">Cr√©ez un compte <a href='{{ url("user!create") }}'>ici</a>.</p>

{% endblock %}