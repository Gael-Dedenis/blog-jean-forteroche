{% extends "layout/layout.twig" %}

{% block title %}

    Connexion

{% endblock %}

{% block header %}

    <h1 class="mg-y text-center">Se connecter</h1>

{% endblock %}

{% block content %}

    <section class="container text-center">

        <form class="form-group" action="{{ url('user!default') }}" method="POST" enctype="multipart/form-data">

            <div class="form-group col-6 offset-3">

                <label for="email" class="col-sm-4 col-form-label">email</label>
                <input type="email" class="form-control" id="email" placeholder="john@doe.gmail" required>

            </div>

            <div class="form-group col-6 offset-3">

                <label for="pass" class="col-sm-4 col-form-label">Mot de passe</label>
                <input type="password" class="form-control" id="pass" autocomplete="off" required>

            </div>

            <button type="submit" class="btn btn-primary">Connexion</button>

        </form>

        <h2 class="mg-y">Pas de compte ?</h2>
        <p>Cr√©ez un compte <a href='{{ url("user!create") }}'>ici</a>.</p>

    </section>

{% endblock %}