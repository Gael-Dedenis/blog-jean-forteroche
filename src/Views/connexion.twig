{% extends "layout/layout.twig" %}

{% block title %}

    Connexion au Blog de Jean Forteroche

{% endblock %}

{% block header %}

    <h1 class="mg-y text-center">Connection</h1>

{% endblock %}

{% block content %}

    <form class="container" action="{{ url('connexion!default') }}" method="POST" enctype="multipart/form-data">

        <div class="form-group row">

            <label for="email" class="col-sm-1 col-form-label">email</label>
            <input type="email" class="form-control" id="pseudo" placeholder="johndoe@lafrite.gmail" required>

        </div>

        <div class="form-group">

            <label for="pass" class="col-sm-1 col-form-label">Mot de passe</label>
            <input type="password" class="form-control" id="pass" autocomplete="off" required>

        </div>

        <button type="submit" class="btn btn-primary">Connection</button>

        <div>

            

        </div>
    </form>

{% endblock %}